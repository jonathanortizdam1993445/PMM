<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.mati.correccionexamenconcesionario.MainActivity">

   <TextView
       android:layout_width="wrap_content"
       android:text="CORRECCION EXAMEN"
       android:layout_height="wrap_content" />
    <ImageView
        android:layout_width="150dp"
        android:layout_marginLeft="300dp"
        android:id="@+id/logo"
        android:layout_height="wrap_content" />
    <Spinner
        android:layout_width="match_parent"
        android:id="@+id/spinner"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginTop="16dp">
    </Spinner>

    <RadioGroup
        android:layout_width="wrap_content"
        android:id="@+id/grupo"
        android:layout_height="wrap_content"
        android:layout_below="@+id/spinner"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="46dp">

        <RadioButton
            android:layout_width="wrap_content"
            android:text="SIN SEGURO"
            android:id="@+id/sin_seguro"
            android:layout_height="wrap_content" />
        <RadioButton
            android:layout_width="wrap_content"
            android:text="SEGURO A TODO RIESGO"
            android:id="@+id/con_seguro"
            android:layout_height="wrap_content" />
    </RadioGroup>

    <CheckBox
        android:layout_width="wrap_content"
        android:text="GPS"
        android:id="@+id/caja_gps"
        android:layout_height="wrap_content"
        android:layout_below="@+id/grupo"
        android:layout_marginTop="23dp" />
    <CheckBox
        android:layout_width="wrap_content"
        android:text="AIRE ACONDICIONADO"
        android:id="@+id/caja_aire"
        android:layout_height="wrap_content"
        android:layout_below="@+id/caja_gps"
        android:layout_alignParentStart="true" />
    <CheckBox
        android:layout_width="wrap_content"
        android:text="RADIO/DVD"
        android:id="@+id/caja_radio"
        android:layout_height="wrap_content"
        android:layout_below="@+id/caja_aire"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:text="PRECIO TOTAL"
        android:id="@+id/boton_total_precio"
        android:layout_height="wrap_content"
        android:layout_marginTop="58dp"
        android:layout_below="@+id/caja_radio"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:hint="INTRODUCE NUMERO DE HORAS"
        android:layout_height="wrap_content"
        android:layout_below="@+id/caja_radio"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="100dp"
        android:id="@+id/resultado_precio_total"
        android:layout_marginLeft="200dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/boton_total_precio"
        android:layout_alignBottom="@+id/boton_total_precio"
        />

    <Button
        android:layout_width="wrap_content"
        android:text="FACTURA"
        android:id="@+id/boton_aceptar"
        android:layout_height="wrap_content"
        android:layout_below="@+id/boton_total_precio"
        android:layout_toEndOf="@+id/caja_radio"
        android:layout_marginTop="14dp" />
</RelativeLayout>
